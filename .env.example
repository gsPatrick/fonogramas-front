
# ==========================================
# CONFIGURAÇÕES SBACEM - FILIAÇÃO DIGITAL
# ==========================================

# Segurança
SECRET_KEY=sua_chave_secreta_aqui
DATABASE_URL=sqlite:///instance/fonogramas.db
FLASK_ENV=development

# CORS
CORS_ORIGINS=http://localhost:3000

# CLICKSIGN (Assinatura Digital)
CLICKSIGN_ACCESS_TOKEN=informe_o_token_gerado_no_painel_clicksign
CLICKSIGN_BASE_URL=https://sandbox.clicksign.com

# SOCIAL NETWORKS (OAuth 2.0 & Enriquecimento)
# ── Spotify (Obrigatório para Item 7) ────────────────────────────────
# Obtenha em https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=seu_client_id_aqui
SPOTIFY_CLIENT_SECRET=seu_client_secret_aqui

# Redirect URIs permitidas (Devem ser configuradas EXATAMENTE assim no painel do Spotify):
# Produção: https://cadastro.sbacem.app.br/api/public/social/callback/spotify
# Local (dev): http://localhost:5001/api/public/social/callback/spotify
SPOTIFY_REDIRECT_URI=https://cadastro.sbacem.app.br/api/public/social/callback/spotify

# Escopos recomendados (Minimo: user-read-private user-read-email)
SPOTIFY_SCOPES=user-read-private user-read-email

# ── Redes Sociais Ativas (Ative conforme disponivel) ────────────────
SOCIAL_SPOTIFY_ENABLED=true
SOCIAL_INSTAGRAM_ENABLED=false
SOCIAL_FACEBOOK_ENABLED=false
SOCIAL_YOUTUBE_ENABLED=false

# YouTube (Google)
YOUTUBE_CLIENT_ID=seu_client_id_google
YOUTUBE_CLIENT_SECRET=seu_client_secret_google
YOUTUBE_API_KEY=sua_youtube_api_key_publica
YOUTUBE_REDIRECT_URI=https://api.sbacem.com.br/apitres/public/social/callback

# Meta (Instagram & Facebook)
# Use o mesmo Facebook App para ambos
FACEBOOK_APP_ID=seu_facebook_app_id
FACEBOOK_CLIENT_ID=seu_facebook_app_id
FACEBOOK_CLIENT_SECRET=seu_facebook_app_secret
FACEBOOK_REDIRECT_URI=https://api.sbacem.com.br/apitres/public/social/callback

INSTAGRAM_CLIENT_ID=seu_instagram_app_id
INSTAGRAM_CLIENT_SECRET=seu_instagram_app_secret
INSTAGRAM_REDIRECT_URI=https://api.sbacem.com.br/apitres/public/social/callback

# Token de acesso de longa duração (opcional para enriquecimento via backend)
META_ACCESS_TOKEN=seu_access_token_long_lived

# CLICKSIGN (Assinatura Digital)
CLICKSIGN_ACCESS_TOKEN=informe_o_token_gerado_no_painel_clicksign
CLICKSIGN_BASE_URL=https://sandbox.clicksign.com

# TOTVS (ERP Integration)
TOTVS_API_URL=https://api.totvs.com.br/v1
TOTVS_API_KEY=sua_chave_api_totvs
